<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Theme.Constantine" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="Theme.Constantine.Toolbar.Title" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/colorTextAction</item>
    </style>
</resources>